<h1>List of Stocks</h1>
 
<table class="table table-striped table-bordered table-sm">
  <tr>
    <th scope="col">Symbol</th>
    <th scope="col">Target Entry</th>
    <th scope="col">Stop Loss</th>
    <th scope="col">Target Exit</th>
    <th scope="col">Target Exit</th>
    <th scope="col">Target Exit</th>
    <th scope="col">Date</th>
    <th scope="col">Timeframe</th>
    <th scope="col">Source</th>
    <th scope="col">Risk</th>
    <th scope="col">Notes</th>
    <th scope="col" colspan="3">Actions</th>
  </tr>
 
  <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.symbol %></td>
      <td><%= stock.target_entry %></td>
      <td><%= stock.stop_loss %></td>
      <td><%= stock.target_exit_1 %></td>
      <td><%= stock.target_exit_2 %></td>
      <td><%= stock.target_exit_3 %></td>
      <td><%= stock.date %></td>
      <td><%= stock.timeframe %></td>
      <td><%= stock.source %></td>
      <td><%= stock.risk %></td>
      <td><%= stock.notes %></td>
      <td><%= link_to 'Show', stock_path(stock) %></td>
      <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
      <td><%= link_to 'Destroy', stock_path(stock),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>